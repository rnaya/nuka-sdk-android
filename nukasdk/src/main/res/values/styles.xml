<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatBotAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="colorControlNormal">@color/accentBlue</item>
    </style>

    <style name="NoConnectionMessage" />
    <style name="NoConnectionMessage.Container">
        <item name="android:background">#A6000000</item>
    </style>
    <style name="NoConnectionMessage.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Toolbar" />
    <style name="Toolbar.UserName">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Toolbar.UserStatus">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MessageBar" />
    <style name="MessageBar.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
    </style>
    <style name="MessageBar.ActionButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ChatMessage" />
    <style name="ChatMessage.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="ChatMessage.Subtitle">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="ChatMessage.Action">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/bg_rounded_accent_blue</item>
    </style>
    <style name="ChatMessage.Category">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/accentDarkBlue</item>
    </style>
    <style name="ChatMessage.PlayerName">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ChatMessage.PlayerDataValue">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ChatMessage.PlayerDataDescription">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ChatMessage.ItemTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ChatMessage.ItemSubtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ChatMessage.RankingItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>